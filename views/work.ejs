<%- include("partials/header.ejs")  %>

<div class="container">
    <h1 class="titulo-fecha">
        Work List
    </h1>

    <%if(locals.tareasWork){%>
        <%   for (let index = 0; index < tareasWork.length; index++) {%>
            <ul class="list-group">
                <li class="list-group-item">
                    <input type="checkbox" class="checkbox">
                    <span class="tachable"><%= tareasWork[index] %></span>
                </li>
        </ul>
    <% }%>
    <%} %>
    
    <form action="/submitWork" method="POST" class="input-group formulario-agregar">
        <input type="text" name="tarea" placeholder="Agregar tarea" class=" form-control input-agregar">
        <div class="input-group-append">
        <button type="submit" class="btn btn-primary boton-agregar">+</button>
        </div>
    </form>
</div>

<%- include("partials/footer.ejs")  %>


