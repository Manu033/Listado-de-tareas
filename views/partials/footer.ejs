<script>
  document.addEventListener("DOMContentLoaded", function() {
      const checkboxes = document.querySelectorAll(".checkbox");
      checkboxes.forEach(function(checkbox) {
          checkbox.addEventListener("change", function() {
              const listItem = this.closest("li");
              const tachableText = listItem.querySelector(".tachable");
              if (this.checked) {
                  tachableText.style.textDecoration = "line-through";
                  tachableText.style.textDecorationColor = "#6A9C89";
              } else {
                  tachableText.style.textDecoration = "none";
              }
          });
      });
  });
</script>

